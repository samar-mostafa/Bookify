@model ResetPasswordViewModel

<form asp-controller="Users"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModelBegin"
      data-ajax-success="onModelSuccess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="onModelComplete">
   
        <input asp-for="@Model.Id" hidden />
   
 
    <div class="mb-3">
        <div class="form-floating">
            <input type="text" class="form-control" placeholder="" asp-for="Password" />
            <label asp-for="Password"></label>
        </div>
        <span asp-validation-for="Password" class="text-danger d-block"></span>
    </div>

    <div class="mb-3">
        <div class="form-floating">
            <input type="text" class="form-control" placeholder="" asp-for="ConfirmPassword" />
            <label asp-for="ConfirmPassword"></label>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
    </div>

    <partial name="_ModelFooter" />

</form>