@model CategoryFormViewModel

@{ViewData["Title"]=$"@{(Model?.Id>0?"Edit" : "Add")} Category" ;}

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">@(Model?.Id>0?"Edit":"Add") Category</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post"  asp-controller="Categories">
                    @if(Model?.Id>0){
                        <input asp-for="@Model.Id" hidden/>
                    }
                   <div class="mb-3">
                        <div class="form-floating mb-2">
                        <input type="text" class="form-control" placeholder="" asp-for="Name" />
                        <label asp-for="Name">Name</label>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                   </div>

                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-check2"></i>
                        Save</button>

                </form>
            </div>
        </div>
      
    </div>
   
</div>
@section Scripts{

    <partial name="_ValidationScriptsPartial" \>

}